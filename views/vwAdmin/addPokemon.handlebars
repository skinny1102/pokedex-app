       var src =  document.getElementById("image").value
       var image=  document.getElementById("imagesrc")
         console.log(src)
          document.getElementById("image").onchange = (e)=>{
              console.log(   e.target.value)
                image.src= e.target.value
          }
          image.addEventListener('error',()=>{
               // dang su ly
          })
    $('#btn-submit').on('click',(e)=>{
        e.preventDefault()
        var namePokemon =$("#namePokemon").val()
        var height =$("#height").val()
        var weight =$("#weight").val()
        var hp =$("#hp").val()
        var attack =$("#attack").val()
        var description =$("#description").val()
        var type =$("#idType1").val()
        var idCategory =$("#idCategory").val()
        var idAbility =$("#idAbility").val()
        var image =$("#image").val()
      if(namePokemon || "",height=="" || weight=="" || hp=="" || attack=="" || description=="" || type=="" || idCategory=="" || idAbility=="" || image=="" ){
            alert("Hãy điền đầy đủ thông tin ")
      }else{
            $("#formaddPokemon").submit()
      } 
       // console.log(namePokemon,height,weight,hp,attack,description,type,idCategory,idAbility,image)
    })
    
          
    </script>
{{/section}}